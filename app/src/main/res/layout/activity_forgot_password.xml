<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient"
    tools:context="com.snapschool.mlps.ForgotPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterEmail"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_editText"
        android:background="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:textColor="#000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/resetPassword"
        android:id="@+id/button"
        android:layout_below="@+id/email_editText"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignRight="@+id/email_editText"
        android:layout_alignEnd="@+id/email_editText"
        android:layout_alignLeft="@+id/email_editText"
        android:layout_alignStart="@+id/email_editText"
        android:onClick="submitAction"/>

</RelativeLayout>
